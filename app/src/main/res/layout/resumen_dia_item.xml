<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:elevation="6dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_cajas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_cajas"
        app:layout_constraintStart_toStartOf="@+id/lab_cajas"
        app:layout_constraintTop_toBottomOf="@+id/lab_cajas" />

    <TextView
        android:id="@+id/txt_tallos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_tallos"
        app:layout_constraintStart_toStartOf="@+id/lab_tallos"
        app:layout_constraintTop_toBottomOf="@+id/lab_tallos" />

    <TextView
        android:id="@+id/txt_comun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_comun"
        app:layout_constraintStart_toStartOf="@+id/lab_comun"
        app:layout_constraintTop_toBottomOf="@+id/lab_comun" />

    <TextView
        android:id="@+id/txt_variedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_variedad"
        app:layout_constraintStart_toStartOf="@+id/lab_variedad"
        app:layout_constraintTop_toTopOf="@+id/txt_cajas" />

    <TextView
        android:id="@+id/txt_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_color"
        app:layout_constraintStart_toStartOf="@+id/lab_color"
        app:layout_constraintTop_toTopOf="@+id/txt_tallos" />

    <TextView
        android:id="@+id/txt_grado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/lab_grado"
        app:layout_constraintStart_toStartOf="@+id/lab_grado"
        app:layout_constraintTop_toTopOf="@+id/txt_comun" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <TextView
        android:id="@+id/lab_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/colorPrimary"
        android:text="Color"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/lab_variedad"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/lab_tallos" />

    <TextView
        android:id="@+id/lab_comun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Comun"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/lab_tallos"
        app:layout_constraintStart_toStartOf="@+id/lab_tallos"
        app:layout_constraintTop_toBottomOf="@+id/txt_tallos" />

    <TextView
        android:id="@+id/lab_tallos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@color/colorPrimary"
        android:text="Tallos"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/lab_cajas"
        app:layout_constraintTop_toBottomOf="@+id/txt_cajas" />

    <TextView
        android:id="@+id/lab_cajas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@color/colorPrimary"
        android:text="Etiquetas"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lab_variedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/colorPrimary"
        android:text="Variedad"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/lab_cajas" />

    <TextView
        android:id="@+id/lab_grado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Grado"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/txt_color"
        app:layout_constraintStart_toStartOf="@+id/txt_color"
        app:layout_constraintTop_toTopOf="@+id/lab_comun" />

</androidx.constraintlayout.widget.ConstraintLayout>